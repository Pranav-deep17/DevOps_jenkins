pipeline {
    agent any
    tools {maven "maven"}
    stages {
        stage('SCM') {
            steps {
                git branch: 'main', url: 'git@github.com:Pranav-deep17/DevOps_jenkins.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('build to images') {
            steps {
                script {
                    sh 'docker build -t pranavdeep17/webapp1 .'
                }
            }
        }
        stage('push to hub') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker_cred', toolName: 'docker', url: 'https://index.docker.io/v1/') {
                              sh 'docker push pranavdeep17/webapp1'
                    }
                }
            }
        }
        
    }
}